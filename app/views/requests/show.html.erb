<div class="container mx-auto mt-3">
  <h1><%= @request.title %></h1>

  <p><strong>詳細:</strong> <%= @request.description %></p>
  <p><strong>作成日時:</strong> <%= @request.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>

  <%= link_to '編集', edit_user_request_path(@request) %> |
  <%= link_to '削除', user_request_path(@request), method: :delete, data: { confirm: '本当に削除しますか？' } %> |
  <%= link_to '一覧に戻る', user_requests_path %>
</div>